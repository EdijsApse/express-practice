<%- include('../includes/head.ejs', { title: 'Signup' }) %>
<%- include('../includes/navigation.ejs') %>
    <section class="bg-white page-title-container container-xxl">
        <div class="py-5">
            <h1 class="text-center">Signup</h1>
        </div>
    </section>
    <section class="bg-white page-main-container container-fixed-xxl mx-auto">
        <form action="/signup" method="POST">
            <div class="row">
                <div class="col-6">
                    <div class="form-group <%= formHelper.hasError('name') ? 'has-error' : '' %>">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control" id="name" value="<%= formHelper.old('name') %>">
                        <%- include('../includes/form-error', { name: 'name' }) %>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group <%= formHelper.hasError('surname') ? 'has-error' : '' %>">
                        <label for="surname">Surname</label>
                        <input type="text" name="surname" class="form-control" id="surname" value="<%= formHelper.old('surname') %>">
                        <%- include('../includes/form-error', { name: 'surname' }) %>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group <%= formHelper.hasError('email') ? 'has-error' : '' %>">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control" id="email" value="<%= formHelper.old('email') %>">
                        <%- include('../includes/form-error', { name: 'email' }) %>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group <%= formHelper.hasError('password') ? 'has-error' : '' %>">
                        <label for="password">Password <i class="fa-solid fa-eye show-password"></i></label>
                        <input type="password" name="password" class="form-control" id="password" value="<%= formHelper.old('password') %>">
                        <%- include('../includes/form-error', { name: 'password' }) %>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group <%= formHelper.hasError('password_confirmation') ? 'has-error' : '' %>">
                        <label for="password_confirmation">Confirm password <i class="fa-solid fa-eye show-password"></i></label>
                        <input type="password" name="password_confirmation" class="form-control" id="password_confirmation" value="<%= formHelper.old('password_confirmation') %>">
                        <%- include('../includes/form-error', { name: 'password_confirmation' }) %>
                    </div>
                </div>
            </div>
            <div class="form-btn-container">
                <button class="btn btn-pink btn-pink-hover" type="submit">Signup</button>
            </div>
        </form>
    </section>
<%- include('../includes/footer.ejs') %>